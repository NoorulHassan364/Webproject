<!doctype html>
<html lang="en">

<head>
  {{>header_links}}
</head>

<body>

  {{>nav}}
                     <!-- Home divs -->

                     <!-- left home div  -->
        <div class="container-fluid home_div">
          <div class="row">
            <div class="col-md-10 col-12 mx-auto">
              <div class="row">

                <div class="col-md-6 col-12 home_left">
                  <p>Welcome to Weather App</p>
                  <h3>Get the Latest <span class="weather_word">Weather</span>  info of your City</h3>
                  <a href="/weather" target="_blank" ><button class="check_btn">Check Now</button></a>
                </div>

                <!-- Right Home div  -->
                <div class="col-md-6 col-12 home_right">

                  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src="images/slide3.png" class="w-100" alt="pic">
                      </div>
                      <div class="carousel-item">
                        <img src="images/slide2.jpg" class="w-100" alt="pic">
                      </div>
                      <div class="carousel-item">
                        <img src="images/slide1.png" class="w-100" alt="pic">
                      </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                      data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                      data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>

                </div>

              </div>
            </div>
          </div>
        </div>
   
 
