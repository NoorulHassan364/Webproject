      function current_day(){
        let week=new Array(7);
        week[0]='Sunday'
        week[1]='Monday'
        week[2]='Teausday'
        week[3]='Wednesday'
        week[4]='Thursday'
        week[5]='Friday'
        week[5]='Saturday'

        let date=new Date();
        let day= week[date.getDay()]
      let datee=document.getElementById('day');
        datee.innerText=day;      
      }
    

      function current_date(){
        let month=[
        'january',
        'February',
        'March',
        'April',
        'May',
        'June',
        'July',
        'Agust',
        'September',
        'October',
       ' November',
       'December',
        ]

        let now_date=new Date();
        let digit_date=now_date.getDate();
        let current_month=month[now_date.getMonth()];
        let Dateee=document.getElementById('date');
        Dateee.innerText=`${digit_date} ${current_month}`;
      } 
        
        current_date();
        current_day();

